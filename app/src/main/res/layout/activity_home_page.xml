<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:padding="6dp"
    android:background="@color/alice_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/joyful_easter"
            android:textSize="32dp"
            android:text="'This is the place where we were going and nothing was foundas dss adsfa sfd'">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/peach_puff"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="24dp"
            app:cardElevation="24dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_huh"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                >
            </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/ariella"
                    android:textSize="32dp"
                    android:text="Ekeshwar Aditya">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="32dp"
                    android:text="Moodometer = 8">
                </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="32dp"
                        android:text="Therapy = 5 min">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_therapy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="Therapy"
            android:textSize="64sp"
            android:fontFamily="@font/home_btn"/>
        <Button
            android:id="@+id/btn_relax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="Relax"
            android:textSize="64sp"
            android:fontFamily="@font/home_btn"/>
        <Button
            android:id="@+id/btn_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="Consult"
            android:textSize="64sp"
            android:fontFamily="@font/home_btn"/>

    </LinearLayout>

</ScrollView>